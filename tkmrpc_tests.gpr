with "ahven";
with "anet";
with "tkmrpc_common";

project TKMRPC_Tests is

   type Build_Type is ("tests", "coverage");
   Build : Build_Type := external ("BUILD", "tests");

   Compiler_Switches := TKMRPC_Common.Compiler_Switches & "-gnatwal";
   Linker_Switches   := ("-Ltests/c", "-lassert");

   for Main use ("test_runner.adb");
   for Source_Dirs use TKMRPC_Common.Source_Dirs & "tests";

   case Build is
      when "tests" =>
         for Object_Dir use "obj/tests";

      when "coverage" =>
         for Object_Dir use "obj/cov";
         Compiler_Switches := Compiler_Switches
           & ("-ftest-coverage", "-fprofile-arcs");
         Linker_Switches   := Linker_Switches
           & ("-fprofile-generate");
   end case;

   package Naming is
      for Specification ("TKMRPC.Client") use "tkmrpc-interfaces-ike-client.ads";
   end Naming;

   package Compiler is
      for Default_Switches ("ada") use Compiler_Switches;
   end Compiler;

   package Linker is
      for Default_Switches ("ada") use Linker_Switches;
   end Linker;

   package Binder is
      for Default_Switches ("ada") use TKMRPC_Common.Binder_Switches;
   end Binder;

end TKMRPC_Tests;

